<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>{{pageTitle}} | Cubicle</title>
    <link href="/static/css/site.css" type="text/css" rel="stylesheet">
    <link rel='shortcut icon' type='image/x-icon' href='/static/images/favicon.png' />
</head>

<body>
    <div class="container">
        {{> header }}

        {{> errorMessage}}

        <main>
            {{{ body }}}
        </main>
    </div>

        {{> footer }}
</body>

<script>
    const path = location.pathname.toLowerCase();

    if (path.includes('edit') || path.includes('delete')){

        const diff = "{{difficulty}}";

        const cubeDiffOption = document.querySelector('#difficulty').children[diff - 1];
        cubeDiffOption.selected = true;
    }

</script>
</html>